#!/bin/sh

npm_packages=(
  bower
  ember-cli
  phantomjs
  pure-prompt
)
for package in $npm_packages; do
  npm -g install $package
done

brew tap Homebrew/bundle

brew bundle --global

boot2docker init

curl -fsSL https://raw.githubusercontent.com/supermarin/Alcatraz/deploy/Scripts/install.sh | sh
